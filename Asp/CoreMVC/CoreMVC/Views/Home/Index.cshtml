@model IEnumerable<CoreMVC.Models.Phone>
@{
    ViewData["Title"] = "Home Page";
}

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Магазин смартфонов</title>
    </head>
    <body>
        <h3>Смартфоны</h3>
        <table>
            <tr>
                <td>Модель</td>
                <td>Производитель</td>
                <td>Цена</td>
                <td></td>
            </tr>
            @foreach(var phone in Model)
            {
                <tr>
                    <td>@phone.Name</td>
                    <td>@phone.Company</td>
                    <td>@phone.Price</td>
                    <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
                </tr>
            }
        </table>
    </body>
    </html>