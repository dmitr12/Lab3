@using Lab29.HtmlHelpers
@model JsonHelper.Record

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Records</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(record => record.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CustomBox(record => record.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(record => record.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(record => record.PhoneNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(record => record.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(record => record.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>  
    @Html.ActionLink("Back to List", "Index")  
</div> 