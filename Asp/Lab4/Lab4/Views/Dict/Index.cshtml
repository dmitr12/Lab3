@model IEnumerable<Lab4.Models.TS>

@{
    ViewBag.Title = "Телефонный справочник";
}

<h2>Телефонный справочник</h2>

<p>
    @Html.ActionLink("Добавить запись", "Add")
</p>
<table class="table">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Телефон
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @Html.ActionLink("Изменить", "Update", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
